<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ddircz.sandbox.FiltersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/filterBy"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Filter By"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <com.example.ddircz.sandbox.MultiSpinner
            android:id="@+id/multispinner2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:entries="@array/amenities"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/locationRadius"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Location Radius (in miles)"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:progress="1"
            android:max="5"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/seekBar1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>

        <!--<SeekBar-->
            <!--android:id="@+id/radiusBar"-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.08"-->
            <!--android:max="50"-->
            <!--android:progress="1"-->
            <!--android:layout_marginBottom="30dp"/>-->

        <Button
            android:id="@+id/buttonFilter"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Filter" />

    </LinearLayout>

</FrameLayout>
